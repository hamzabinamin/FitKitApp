<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurred2"
    android:weightSum="1"
    tools:context="hamza.example.fitkitapp.Congrats">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="340dp"
        android:background="@color/colorWhiteTopBarText"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:text="Account Created!"
            android:gravity="center"
            android:textSize="21sp"
            android:id="@+id/account"
            android:textColor="@color/colorWhiteTopBarText"
            android:background="@color/colorBlueTopBar"
            android:layout_weight="0.07" />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="300dp"
            android:background="@drawable/overlay"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:weightSum="1">


            <TextView
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:textSize="21sp"
                android:textColor="@color/colorBlack"
                android:text="Congratulations!"
                android:id="@+id/congratsText"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"
                android:text="You're one step away from creating your account."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="75dp"
                android:textColor="@color/colorBlack"
                android:text="Your daily calorie goal is: "
                />

            <TextView
                android:id="@+id/calorieGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="80dp"
                android:textColor="@color/colorGreenCalories"
                android:text="1500"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_marginTop="-26dp"
                android:layout_marginLeft="150dp"
                android:textColor="@color/colorBlack"
                android:text="Calories"
                />


            <Button
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Continue"
                android:textColor="@color/colorWhiteTopBarText"
                android:textSize="19dp"
                android:layout_gravity="center"
                android:id="@+id/Btn_Continue"
                android:layout_marginTop="30dp"
                android:background="@color/colorBlueTopBar"
                />


        </LinearLayout>



    </FrameLayout>


</LinearLayout>
