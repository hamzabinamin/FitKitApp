<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hamza.example.fitkitapp.SignUp_LogIn"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueTopBar"
            android:text="@string/top_bar"
            android:textColor="@color/colorWhiteTopBarText"
            android:textSize="@dimen/topBarText" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cuttingboard"
        android:layout_marginBottom="120dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/sign_up"
        android:id="@+id/Btn_SignUp"
        android:textColor="@color/colorWhiteTopBarText"
        android:layout_gravity="center"
        android:background="@color/colorBlueTopBar"
        android:layout_marginTop="-110dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/log_in"
        android:id="@+id/Btn_Login"
        android:textColor="@color/colorWhiteTopBarText"
        android:layout_gravity="center"
        android:background="@color/colorBlueTopBar"
        android:layout_marginTop="10dp" />

</LinearLayout>
